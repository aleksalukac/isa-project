@page
@model AddAllergicDrugsModel
@{
    ViewData["Title"] = "Add Allergic Drugs";
    ViewData["ActivePage"] = ManageNavPages.AddAllergicDrugs;
}

<h4>@ViewData["Title"]</h4>

<div class="row">
    <div class="col-md-6">
        <form class="form-group" method="post">
            @for(int i=0; i < Model.AlergicDrugs.Count; i++)
            {
            <div class="form-group">
                <label asp-for="@Model.AlergicDrugs[i].Allergic">@Model.AlergicDrugs[i].DrugName</label>
                <input type="checkbox" asp-for="@Model.AlergicDrugs[i].Allergic" />
                <input type="text" asp-for="@Model.AlergicDrugs[i].DrugId" hidden />
                <input type="text" asp-for="@Model.AlergicDrugs[i].DrugName" hidden />
            </div>
            }
            <button type="submit" class="btn btn-primary">Save Changes</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
