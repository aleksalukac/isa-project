@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Appointment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Pharmacies" asp-action="TakeAppointment">
            <div class="form-group">
                <label class="control-label">Time:</label>
                <input type="datetime" id="dateTime" name="dateTime" class="form-control" value="@ViewData["DateTime"]" readonly>
            </div>

            <div class="form-group">
                <label class="control-label">Pharmacy:</label>
                <input type="datetime" id="dateTime" class="form-control" value="@ViewData["PharmacyName"]" readonly>
                <input type="text" name="pharmacyId" class="form-control" value="@ViewData["PharmacyId"]" readonly hidden>
            </div>
            <div class="form-group">
                <label class="control-label">Cost:</label>
                <input type="datetime" id="dateTime" name="cost" class="form-control" value="@ViewData["Cost"]" readonly>
            </div>

            <div class="form-group">
                <select name="pharmacistsd" id="pharmacistsd" class="form-control">
                    @foreach (Pharmacy.Models.Entities.Users.AppUser item in (List<Pharmacy.Models.Entities.Users.AppUser>)@ViewData["Pharmacists"])
                    {
                        <option value=@item.Id class="option">@item.FirstName @item.LastName</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-outline-dark">Schedule Appointment</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
