@model IEnumerable<Pharmacy.Models.Entities.DrugAndQuantities>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" id="crid">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PharmacyId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.ToList().Count(); i++) 
        { 
            <tr>
                <td>
                    @foreach (Pharmacy.Models.Entities.Pharmacy itemPharmacy in (List<Pharmacy.Models.Entities.Pharmacy>)@ViewData["PharmacyList"])
                    {
                        @if (Model.ToList()[i].PharmacyId == itemPharmacy.Id)
                        {
                            <label value=@itemPharmacy.Id class="option">@itemPharmacy.Name</label>
                        }
                    }

                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.ToList()[i].Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.ToList()[i].Price)
                </td>
                <td>
                    <a id=@string.Concat("Edit",i) asp-action="Edit" asp-route-id="@Model.ToList()[i].Id">Edit</a> |
                    <a id=@string.Concat("Det",i) asp-action="Details" asp-route-id="@Model.ToList()[i].Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@Model.ToList()[i].Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
