@model IEnumerable<Pharmacy.Models.Entities.SupplyItem>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DrugId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SupplyOrderId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExtraQuantity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count(); i++)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => Model.ToList()[i].DrugId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.ToList()[i].SupplyOrderId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.ToList()[i].ExtraQuantity)
                </td>
                <td>
                    <a id=@string.Concat("Edit",i)  asp-action="Edit" asp-route-id="@Model.ToList()[i].Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@Model.ToList()[i].Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@Model.ToList()[i].Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
        }

