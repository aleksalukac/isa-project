@model Pharmacy.Models.Entities.Order

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label for="drug" class="control-label">Drug</label>
                <input type="text" readonly class="form-control" id="drug" value=@ViewData["DrugName"]>
                <input type="hidden" id="drugQuantId" name="drugQuantId" value=@ViewData["drugQuantityId"] />
            </div>
            <div class="form-group">
                <label for="cost" class="control-label">Price</label>
                <input type="text" readonly class="form-control" id="cost" name="cost" value=@ViewData["DrugCost"]>
            </div>
            <div class="form-group mb-2">
                <label for="pharmacy" class="control-label">Pharmacy</label>
                <input type="text" name="pharmacy" readonly class="form-control" id="pharmacy" value=@ViewData["Pharmacy"]>
            </div>
            <div class="form-group">
                <label for="time" class="control-label" >Time</label>
                <input type="date" id="time" name="time" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
