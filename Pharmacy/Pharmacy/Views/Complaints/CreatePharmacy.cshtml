@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Complaint</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreatePharmacy">
            <div class="form-group">
                <label for="ReportText" class="control-label">Complaint Text:</label>
                <input name="reportText" class="form-control" id="reportText" />
            </div>
            <div class="form-group">
                <label for="pharmacyId">Pharmacy:</label>
                <select name="pharmacyId" id="pharmacyId" class="form-control">
                    @foreach (Pharmacy.Models.Entities.Pharmacy item in (List<Pharmacy.Models.Entities.Pharmacy>)@ViewData["PharmacyList"])
                    {
                        <option value=@item.Id class="option">@item.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" id="sbm"/>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
